{
  "name": "ai-spotify",
  "private": true,
  "version": "0.1.0",
  "description": "Simple Preact + TS app to create Spotify playlists from an AI prompt",
  "scripts": {
    "dev": "concurrently -k -n SERVER,WEB -c cyan,magenta \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "cross-env NODE_ENV=development ts-node-dev --project server/tsconfig.json --respawn --transpile-only server/src/index.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config client/vite.config.ts",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "cross-env NODE_ENV=production node server/dist/index.js",
    "typecheck": "tsc -p server/tsconfig.json --noEmit && tsc -p client/tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "preact": "^10.24.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.2.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1"
  }
}
